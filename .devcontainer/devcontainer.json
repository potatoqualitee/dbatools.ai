{
    "name": "dbatools.ai",
    "workspaceFolder": "/workspace",
    "dockerComposeFile": [
        "docker-compose.yml"
    ],
    "service": "mssql",
    "portsAttributes": {
        "1433": {
            "label": "MSSQL"
        }
    },
    "secrets": {
        "OPENAI_API_KEY": {
            "description": "This is your OpenAI key for the openai.com API.",
            "documentationUrl": "https://platform.openai.com/api-keys"
        }
    },
    "customizations": {
        "vscode": {
            "settings": {
                "powershell.powerShellAdditionalExePaths": {
                    "PowerShell": "/usr/bin/pwsh"
                },
                "powershell.powerShellDefaultVersion": "PowerShell",
                "terminal.integrated.profiles.linux": {
                    "pwsh": {
                        "path": "/usr/bin/pwsh",
                        "icon": "terminal-powershell"
                    }
                },
                "terminal.integrated.shell.linux": "pwsh",
                "terminal.integrated.defaultProfile.linux": "pwsh"
            },
            "extensions": [
                "ms-vscode.powershell",
                "dbatools.search",
                "ms-windows-ai-studio.windows-ai-studio",
                "ms-dotnettools.dotnet-interactive-vscode"
            ]
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder}/.devcontainer/scripts/Microsoft.PowerShell_profile.ps1,target=/home/mssql/.config/powershell/Microsoft.PowerShell_profile.ps1,type=bind"
    ],
    "postCreateCommand": "pwsh -noprofile /tmp/setup.ps1"
}